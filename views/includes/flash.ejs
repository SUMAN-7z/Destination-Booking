<!-- Check if there are any 'success' flash messages to display -->
<% if(success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2"
  role="alert"
>
  <%=success%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> 

<!-- Check if there are any 'error' flash messages to display -->
<% if(error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2"
  role="alert"
>
  <%=error%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
